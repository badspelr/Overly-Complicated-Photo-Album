# Django settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_ENGINE=django.db.backends.postgresql
DB_NAME=photo_album
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# AI Features
AI_AUTO_TAGGING=True
AI_SMART_SEARCH=True
AI_DUPLICATE_DETECTION=True
AI_CONTENT_MODERATION=False
AI_IMAGE_DESCRIPTIONS=True

# Hugging Face API (optional, for higher rate limits)
# HF_TOKEN=your-huggingface-token-here

# AI Models (using default models)
AI_IMAGE_TAGGING_MODEL=microsoft/resnet-50
AI_SEMANTIC_MODEL=openai/clip-vit-base-patch32
AI_TEXT_EMBEDDING_MODEL=all-MiniLM-L6-v2
AI_NSFW_MODEL=Falconsai/nsfw_image_detection

# AI Processing
AI_BATCH_SIZE=4
AI_MAX_IMAGE_SIZE=1024
AI_ENABLE_GPU=False
AI_CACHE_EMBEDDINGS=True

# Email (for production)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True
# SERVER_EMAIL=your-email@gmail.com
# DEFAULT_FROM_EMAIL=your-email@gmail.com

# Security
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# File Upload
FILE_UPLOAD_MAX_MEMORY_SIZE=52428800
DATA_UPLOAD_MAX_MEMORY_SIZE=104857600
DATA_UPLOAD_MAX_NUMBER_FILES=1000